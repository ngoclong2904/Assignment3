<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orchids</title>
</head>

<body>
    <div class="container">
        <div class="columns">
            <div class="column">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Original</th>
                            <th>Is Natural</th>
                            <th>color</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orchids.forEach(function(orchids){ %>
                            <tr>
                                <td>
                                    <figure class="image is-64x64">
                                        <img src=<%=orchids.image %> >
                                    </figure>
                                </td>
                                <td>
                                    <%= orchids.name %>
                                </td>
                                <td>
                                    <%= orchids.price %>
                                </td>
                                <td>
                                    <%= orchids.original %>
                                </td>
                                <td>
                                    <%= orchids.isNatural %>
                                </td>
                                <td>
                                    <%= orchids.color %>
                                </td>
                                <td>
                                    <div class="buttons are-small">
                                        <a href="/orchids/edit/<%= orchids.id %>"><button
                                                class="button is-warning is-light">Edit</button></a>
                                        <a href="/orchids/delete/<%= orchids.id %>"
                                            onclick="return confirm('Bạn có chắc chắn muốn xóa?')"><button
                                                class="button is-danger is-light">Delete</button></a>

                                    </div></a>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
</body>

</html>